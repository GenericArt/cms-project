{
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "lib": ["ES2020", "DOM"],
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      },
      "types": ["node", "express", "drizzle-orm"],
      "sourceMap": true,
      "inlineSources": true,
      "declaration": true
    },
    "include": ["**/*.ts"],
    "exclude": ["node_modules", "dist"]
  }
  